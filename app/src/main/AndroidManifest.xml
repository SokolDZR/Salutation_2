<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ordi.salutation">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcer"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcer"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="Settings"
            android:parentActivityName=".NavigationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ordi.salutation.NavigationActivity" />
        </activity>
        <activity
            android:name=".NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ordi.salutation.MainActivity" />
        </activity>
        <activity
            android:name=".DataInputActivity"
            android:label="Ввод параметров"
            android:parentActivityName=".SelectSalutation">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ordi.salutation.SelectSalutation" />
        </activity>
        <activity
            android:name=".SelectSalutation"
            android:label="Выберите праздник"
            android:parentActivityName=".NavigationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ordi.salutation.NavigationActivity" />
        </activity>
    </application>

</manifest>